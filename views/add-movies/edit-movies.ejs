<div class="ader-title">
  <h2>View / Edit Movies</h2>

  <form action="/delete-movie<%= data._id %>?_method=DELETE" method="POST">
    <input type="submit" value="DELETE" class="btn-delete btn" />
  </form>
</div>

<form action="/edit-movie/<%= data._id %>?_method=PUT" method="POST">
  <label for="title"><b>Title</b></label>
  <input
    type="text"
    placeholder="Movie Title"
    name="title"
    value="<%= data.title %>"
  />

  <label for="body"><b>Description</b></label>
  <textarea name="body" cols="50" rows="10"><%= data.body %></textarea>

  <label for="body"><b>Movie Poster URL</b></label>
  <textarea name="poster" cols="50" rows="10"><%= data.body %></textarea>

  <input type="submit" value="Update" class="btn" />
</form>
